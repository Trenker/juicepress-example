{{> top }}

{{!
    USE THE TRIPLE BRACES FOR THE CONTENT
    Because the content is already generated Markup
}}

{{{ content }}}
<hr>
<div class="row">
    <div class="col-md-6">
        <h2>Categories</h2>
        <ul>
            {{#each categories}}
                <li><a href="{{link_category this}}">{{this}}</a></li>
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Tags</h2>
        <ul>
            {{#each tags}}
                <li><a href="{{link_tag this}}">{{this}}</a></li>
            {{/each}}
        </ul>
    </div>
</div>
<hr>
<div class="pager">
    {{#if previous}}
        <li class="previous"><a href="{{link_post previous.target}}">&larr; {{previous.data.title}}</a></li>
    {{/if}}

    {{#if next}}
        <li class="next"><a href="{{link_post next.target}}">{{next.data.title}} &rarr;</a></li>
    {{/if}}
</div>

{{>bottom}}
